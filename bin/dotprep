#!/bin/bash

mkdir .config

# scripts
cp -rf -r ~/bin ./

# bspwm
mkdir ./.config/bspwm
cp -rf ~/.config/bspwm/bspwmrc ./.config/bspwm/

# cmus
mkdir ./.config/cmus
cp -rf ~/.config/cmus/rc ./.config/cmus/
cp -rf ~/.config/cmus/gruvbox.theme ./.config/cmus/

# compton
cp -rf ~/.config/compton.conf ./.config/

# dunst
mkdir ./.config/dunst
cp -rf ~/.config/dunst/dunstrc ./.config/dunst/

# feh
cp -rf ~/.fehbg ./

# gtk 2.0
cp -rf ~/.gtkrc-2.0 ./

# gtk 3.0
mkdir ./.config/gtk-3.0
cp -rf ~/.config/gtk-3.0/settings.ini ./.config/gtk-3.0/

# htop
mkdir ./.config/htop
cp -rf ~/.config/htop/htoprc ./.config/htop/

# mpv
mkdir ./.config/mpv
cp -rf ~/.config/mpv/input.conf ./.config/mpv/
cp -rf ~/.config/mpv/mpv.conf ./.config/mpv/

# mutt
mkdir .mutt
cp -rf ~/.mutt/muttrc ./.mutt/
cp -rf ~/.mutt/mailcap ./.mutt/

# neofetch
mkdir ./.config/neofetch
cp -rf ~/.config/neofetch/config ./.config/neofetch/

# neovim
mkdir ./.config/nvim
cp -rf ~/.config/nvim/init.vim ./.config/nvim/

# newsbeuter
mkdir .newsbeuter
cp -rf ~/.newsbeuter/config ./.newsbeuter/
cp -rf ~/.newsbeuter/urls ./.newsbeuter/

# polybar
mkdir ./.config/polybar
cp -rf ~/.config/polybar/config ./.config/polybar/
cp -rf ~/.config/polybar/cmus.sh ./.config/polybar/

# ranger
mkdir ./.config/ranger
cp -rf ~/.config/ranger/rc.conf ./.config/ranger/
cp -rf ~/.config/ranger/rifle.conf ./.config/ranger/
mkdir ./.config/ranger/colorschemes
cp -rf ~/.config/ranger/colorschemes/gruvbox.py ./.config/ranger/colorschemes/

# sxhkd
mkdir ./.config/sxhkd
cp -rf ~/.config/sxhkd/sxhkdrc ./.config/sxhkd/

# tmux
cp -rf ~/.tmux.conf ./

# wallpaper
mkdir .wallpaper
cp -rf ~/.wallpaper/lightgrass.jpg ./.wallpaper/

# xinit
cp -rf ~/.xinitrc ./

# X resources
cp -rf ~/.Xresources ./

# zathura
mkdir ./.config/zathura
cp -rf ~/.config/zathura/zathurarc ./.config/zathura/

# zsh
cp -rf ~/.zprofile ./
cp -rf ~/.zshenv ./
cp -rf ~/.zshrc ./
